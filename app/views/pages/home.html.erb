  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "logo.png", style: "height: 50px; width: auto;" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto flex-row justify-content-center">
          <%# if user_signed_in? %>
            <li class="nav-item active">
              <%= link_to "Heroes", "/heroes", class: "nav-link", style: "margin-right: 10px;" %>
            </li>
            <li class="nav-item">
              <%= link_to "Profile", "#", class: "nav-link", style: "margin-right: 10px;" %>
            </li>
            <li class="nav-item">
              <%= link_to "Add your hero", "#", class: "nav-link", style: "margin-right: 10px;" %>
            </li>
