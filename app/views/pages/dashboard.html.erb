<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Herohub</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/flatpickr@4.6.6/dist/flatpickr.min.css' %>
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/flatpickr@4.6.6/dist/flatpickr.min.js' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column h-100 bg-black">
    <main class="flex-shrink-0">
      <!-- Navigation-->
      <nav class="navbar navbar-expand-lg navbar-dark bg-black">
        <div class="container px-5">
          <%= link_to "/", class: "navbar-brand" do %>
            <%= image_tag "logo.png", style: "height: 50px; width: auto;" %>
          <% end %>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
              <li class="nav-item"><a class="nav-link" href="/heros">Heroes</a></li>
              <li class="nav-item"><a class="nav-link" href="/dashboard">Profile</a></li>
              <% if user_signed_in? %>
                <li class="nav-item"><%= button_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
              <% else %>
                <li class="nav-item"><%= button_to "Login", new_user_session_path, class: "nav-link" %></li>
              <% end %>
            </ul> 
                </div>
            </div>
        </nav>

<h1>Welcome, <%= @user.username %>!</h1>

<div>
  <h2>Your Heroes</h2>
  <% @heros.each do |hero| %>
    <div>
      <h3><%= hero.name %></h3>
      <ul>
        <li><%= hero.power %></li>
        <li><%= hero.price %></li>
      </ul>
      <%= link_to 'Edit', edit_hero_path(hero) %>
      <%= link_to 'Delete', hero_path(hero), method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
</div>


<div>
  <h2>Pending Bookings</h2>
  <% @heros.each do |hero| %>
    <% hero.bookings.each do |booking| %>
      <% if booking.status == 'pending' %>
        <div class="booking">
          <h3><%= hero.name %></h3>
          <ul>
            <li><%= booking.user.username %> wants to book <%= hero.name %></li>
            <li><%= booking.start_date %> to <%= booking.end_date %></li>
            <li><%= booking.status %></li>
          </ul>

          <%= simple_form_for [hero, booking], method: :patch do |f| %>
            <%= f.input :status, as: :hidden, input_html: { value: 'accepted'} %>
            <%= f.submit 'Accept', class: 'btn btn-info' %>
          <% end %>

          <%= simple_form_for [hero, booking], method: :patch do |f| %>
            <%= f.input :status, as: :hidden, input_html: { value: 'rejected'} %>
            <%= f.submit 'Reject', class: 'btn btn-light' %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>


<div>
  <h2>Your Reservations</h2>
  <ul>
    <% @bookings.each do |booking| %>
      <!-- Display information about each booking -->
      <li><%= booking.hero.name %></li>
      <li><%= booking.start_date %> to <%= booking.end_date %></li>
    <% end %>
  </ul>
</div>

<div class="bookings">
  <% @bookings.each do |booking| %>
    <div class="booking">
      <div class='booking-left'>
        <div class="booking-info">
          <div class="booking-info-title">
            <%= booking.user.username %>
          </div>
          <div class="booking-info-details">
            <%= booking.start_date %> - <%= booking.end_date %>
          </div>
        </div>
      </div>
      <div class="booking-actions">
        <% if booking.status == "pending" %>
          <%= simple_form_for booking do |f| %>
            <%= f.input :status, as: :hidden, input_html: { value: 'accepted'} %>
            <%= f.submit 'Accept', class: 'btn btn-info' %>
          <% end %>
          <%= simple_form_for booking do |f| %>
            <%= f.input :status, as: :hidden, input_html: { value: 'rejected'} %>
            <%= f.submit 'Reject', class: 'btn btn-light' %>
          <% end %>
        <% else %>
          <p class='booking-tag'><%= booking.status %></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
