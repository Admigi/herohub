<%= form_for [hero, Review.new] do |f| %>
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.number_field :rating, class: 'rounded-4 form-control', min: 1, max: 5, maxlength: 1, placeholder: 'Rate /5' %>
  </div>

  <div class="form-group">
    <%= f.label :review_text %>
    <%= f.text_area :review_text, class: 'rounded-4 form-control', placeholder: 'Write your review' %>
  </div>

  <%= f.submit 'Submit Review', class: 'mt-3 rounded-4 btn btn-outline-light btn-lg px-3 mb-2 bg-black text-white' %>
<% end %>
